<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lyt_detail"
    android:background="@color/white_soft"
    tools:context=".ActivityDetail">

    <include layout="@layout/toolbar_detailuser" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_DetailUser">

            <!--<com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/progressbar_detail"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                app:SpinKit_Color="@color/white"/>-->

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_detail"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@color/black_soft"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/name_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/img_detail"
                android:gravity="center"
                tools:text="Nama User"
                android:textSize="18sp"
                android:fontFamily="@font/mmedium"
                android:textColor="@color/black_soft"
                android:textStyle="bold"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_detail"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cardview"
                app:tabMode="fixed"
                app:tabIndicatorGravity="stretch"
                app:tabIndicatorAnimationMode="elastic"
                app:tabTextAppearance="@style/TabLayoutStyle"
                app:tabTextColor="@color/black_soft"
                app:tabSelectedTextColor="@color/white_soft"
                app:tabIndicator="@drawable/shape_tablayout"/>
            <LinearLayout
                android:id="@+id/lineTabs"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:background="@color/black_soft"
                android:layout_below="@+id/tabs"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lineTabs"/>

        </RelativeLayout>
</RelativeLayout>